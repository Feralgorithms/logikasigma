<!-- Kontak section -->
<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-12 scroll-fade">

    <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-center mb-12
            leading-tight
            bg-gradient-to-r from-purple-500 via-pink-500 to-orange-500
            text-transparent bg-clip-text drop-shadow-lg opacity-0 animate-fadeIn">
      Kontak Kami
    </h2>

    <div id="my-alert"
      class="lg:w-2/3 lg:mx-auto hidden bg-green-100 items-center justify-between border border-green-700 px-4 py-3 rounded-lg mb-4">
      <button onclick="this.parentElement.classList.add('hidden')"
        class="text-green-800 hover:text-green-900 font-bold text-xl leading-none">
        &times;
      </button>
    </div>

    <!-- Form -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">

      <div class="flex flex-col justify-center space-y-6">
        <div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Alamat</h3>
          <p class="text-gray-600">Soppeng, Sulawesi selatan, Indonesia</p>
        </div>

        <div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Instagram</h3>
          <p class="text-gray-600">logikasigma</p>
        </div>

        <div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Email</h3>
          <p class="text-gray-600">logikasigma@gmail.com</p>
        </div>

      </div>


      <div class="bg-white rounded-lg shadow-md p-8 hover:shadow-lg transition duration-300">
        <form name="My-web-portfolio-contact-form" class="space-y-6">
          <div>
            <label for="name" class="block text-gray-700 font-medium mb-2">Nama</label>
            <input type="text" id="nama" name="nama" required
              class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-purple-500 focus:outline-none">
          </div>

          <div>
            <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
            <input type="email" required id="email" name="email" required
              class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-purple-500 focus:outline-none">
          </div>

          <div>
            <label for="message" class="block text-gray-700 font-medium mb-2">Pesan</label>
            <textarea type="text" id="pesan" name="pesan" rows="5" required
              class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-purple-500 focus:outline-none"></textarea>
          </div>

          <button id="btn" type="submit"
            class="w-full px-6 py-3 bg-gradient-to-r from-purple-500 via-pink-500 to-orange-500 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transition duration-300">
            Kirim Pesan
          </button>
        </form>
      </div>
    </div>
  </div>
</section>